{ "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "api/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    }
  ],
    "build": {
      "env": {
        "type": "@type",
        "project_id": "@project_id",
        "private_key_id": "@private_key_id",
        "private_key": "@private_key",
        "client_email": "@client_email",
        "client_id": "@client_id",
        "sendgrid_api_key": "@sendgrid_api_key"
      }
    }
  }